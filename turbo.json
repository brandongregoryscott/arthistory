{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env*"],
    "tasks": {
        "build": {
            "env": [
                "NEXT_PUBLIC_API_URL",
                "AWS_S3_ENDPOINT",
                "AWS_ACCESS_KEY_ID",
                "AWS_SECRET_ACCESS_KEY",
                "CLIENT_IDS",
                "CLIENT_SECRETS"
            ],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
            "cache": false,
            "persistent": true
        }
    }
}
